<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - SmartBill+ Capital</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/dark-mode.css">
    <script src="/js/theme-and-notifications.js"></script>
    <style>
        body { font-family: 'Poppins', sans-serif; }
        .glass { background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2); }
        .hover-lift { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        .hover-lift:hover { transform: translateY(-4px); box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1); }
        .fade-in { animation: fadeIn 0.5s ease-in; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        .pulse-glow { animation: pulse-glow 2s infinite; }
        @keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 5px rgba(102, 126, 234, 0.5); }
            50% { box-shadow: 0 0 20px rgba(102, 126, 234, 0.8), 0 0 30px rgba(102, 126, 234, 0.6); }
        }
        .nav-active { background: linear-gradient(to right, #2563eb, #4f46e5); color: white; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1); }
        
        /* Dark mode styles */
        body.dark-mode {
            background: linear-gradient(to bottom right, #0f172a, #1e293b, #334155);
        }
        body.dark-mode .glass {
            background: rgba(30, 41, 59, 0.7);
            border-color: rgba(148, 163, 184, 0.2);
        }
        body.dark-mode .text-gray-900 { color: #f1f5f9 !important; }
        body.dark-mode .text-gray-700 { color: #cbd5e1 !important; }
        body.dark-mode .text-gray-600 { color: #94a3b8 !important; }
        body.dark-mode .text-gray-500 { color: #64748b !important; }
        body.dark-mode .bg-white { background-color: #1e293b !important; }
        body.dark-mode .bg-white\/50 { background-color: rgba(30, 41, 59, 0.5) !important; }
        body.dark-mode .bg-white\/30 { background-color: rgba(30, 41, 59, 0.3) !important; }
        body.dark-mode .border-gray-200 { border-color: #334155 !important; }
        body.dark-mode .border-gray-300 { border-color: #475569 !important; }
        body.dark-mode input, body.dark-mode select, body.dark-mode textarea {
            background-color: #1e293b;
            color: #f1f5f9;
            border-color: #475569;
        }
        body.dark-mode svg { color: #f1f5f9 !important; stroke: #f1f5f9 !important; }
        
        /* Toggle Switch */
        .toggle-switch {
            position: relative;
            width: 60px;
            height: 30px;
            background-color: #cbd5e1;
            border-radius: 30px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .toggle-switch.active {
            background: linear-gradient(to right, #2563eb, #4f46e5);
        }
        .toggle-slider {
            position: absolute;
            top: 3px;
            left: 3px;
            width: 24px;
            height: 24px;
            background-color: white;
            border-radius: 50%;
            transition: transform 0.3s;
        }
        .toggle-switch.active .toggle-slider {
            transform: translateX(30px);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
    <div class="flex h-screen">
        <%- include('partials/sidebar', { currentPage: 'settings' }); %>

        <!-- Mobile sidebar overlay -->
        <div id="overlay" class="fixed inset-0 z-40 bg-black bg-opacity-50 lg:hidden hidden" onclick="toggleSidebar()"></div>

        <div class="flex flex-1 flex-col lg:ml-64">
            <%- include('partials/header', { pageTitle: 'Settings' }); %>

            <main class="flex-1 overflow-auto p-4 sm:p-6">
                <div class="fade-in max-w-4xl">
                    <!-- Appearance Settings -->
                    <div class="glass rounded-lg p-5 mb-4">
                        <h2 class="text-lg font-bold text-gray-900 mb-4">Appearance</h2>
                        
                        <div class="space-y-4">
                            <!-- Theme Toggle -->
                            <div class="flex items-center justify-between p-4 bg-white/50 rounded-lg">
                                <div class="flex items-center space-x-3">
                                    <svg class="h-6 w-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
                                    </svg>
                                    <div>
                                        <p class="font-semibold text-gray-900">Dark Mode</p>
                                        <p class="text-xs text-gray-600">Switch between light and dark theme</p>
                                    </div>
                                </div>
                                <div class="toggle-switch" id="themeToggle" onclick="toggleTheme()">
                                    <div class="toggle-slider"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Settings -->
                    <div class="glass rounded-lg p-5 mb-4">
                        <h2 class="text-lg font-bold text-gray-900 mb-4">Account</h2>
                        
                        <div class="space-y-3">
                            <div>
                                <label class="block text-xs font-medium text-gray-700 mb-1.5">Full Name</label>
                                <input id="fullName" type="text" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-gray-700 mb-1.5">Email</label>
                                <input id="email" type="email" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-gray-700 mb-1.5">Role</label>
                                <input id="role" type="text" disabled class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg bg-gray-100 text-gray-500">
                            </div>
                            <button id="saveAccount" class="px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium rounded-lg transition text-sm mt-2">
                                Save Changes
                            </button>
                            <div id="accountMsg" class="text-xs mt-2"></div>
                        </div>
                    </div>

                    <!-- Business Settings -->
                    <div class="glass rounded-lg p-5 mb-4">
                        <h2 class="text-lg font-bold text-gray-900 mb-4">Business</h2>
                        
                        <div class="space-y-3">
                            <div>
                                <label class="block text-xs font-medium text-gray-700 mb-1.5">Business Name</label>
                                <input id="businessName" type="text" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-xs font-medium text-gray-700 mb-1.5">GST Number</label>
                                <input id="gstNumber" type="text" placeholder="e.g., 24AAZPM1744N2ZZ" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                            </div>
                            <button id="saveBusiness" class="px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium rounded-lg transition text-sm mt-2">
                                Save Changes
                            </button>
                            <div id="businessMsg" class="text-xs mt-2"></div>
                        </div>
                    </div>

                    <!-- Notifications Settings -->
                    <div class="glass rounded-lg p-5">
                        <h2 class="text-lg font-bold text-gray-900 mb-4">Notifications</h2>
                        
                        <div class="space-y-3">
                            <div class="flex items-center justify-between p-3 bg-white/50 rounded-lg">
                                <div>
                                    <p class="font-medium text-gray-900 text-sm">Low Stock Alerts</p>
                                    <p class="text-xs text-gray-600">Get notified when stock is low</p>
                                </div>
                                <input id="notifLowStock" type="checkbox" class="w-5 h-5 text-blue-600 rounded">
                            </div>
                            <div class="flex items-center justify-between p-3 bg-white/50 rounded-lg">
                                <div>
                                    <p class="font-medium text-gray-900 text-sm">New Sales</p>
                                    <p class="text-xs text-gray-600">Alert on new bill generation</p>
                                </div>
                                <input id="notifNewSales" type="checkbox" class="w-5 h-5 text-blue-600 rounded">
                            </div>
                            <div class="flex items-center justify-between p-3 bg-white/50 rounded-lg">
                                <div>
                                    <p class="font-medium text-gray-900 text-sm">Batch Expiry</p>
                                    <p class="text-xs text-gray-600">Warn about expiring batches</p>
                                </div>
                                <input id="notifBatchExpiry" type="checkbox" class="w-5 h-5 text-blue-600 rounded">
                            </div>
                        </div>
                        <button id="saveNotifications" class="px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium rounded-lg transition text-sm mt-2">Save Changes</button>
                        <div id="notifMsg" class="text-xs mt-2"></div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        // --- Dynamic Settings Integration ---
        async function fetchSettings() {
            try {
                const res = await fetch('/api/settings/all');
                if (!res.ok) throw new Error('Failed to fetch settings');
                const response = await res.json();
                // Handle both array and object responses
                const settingsArray = Array.isArray(response) ? response : (response.data || []);
                const settings = {};
                settingsArray.forEach(item => {
                    settings[item.key] = item.value;
                });
                // Map settings to fields
                document.getElementById('fullName').value = settings.fullName || '';
                document.getElementById('email').value = settings.email || '';
                document.getElementById('role').value = settings.role || '';
                document.getElementById('businessName').value = settings.businessName || '';
                document.getElementById('gstRate').value = settings.gstRate || '';
                document.getElementById('currency').value = settings.currency || 'INR';
                document.getElementById('notifLowStock').checked = settings.notifLowStock === 'true' || settings.notifLowStock === true;
                document.getElementById('notifNewSales').checked = settings.notifNewSales === 'true' || settings.notifNewSales === true;
                document.getElementById('notifBatchExpiry').checked = settings.notifBatchExpiry === 'true' || settings.notifBatchExpiry === true;
            } catch (err) {
                console.error('Error fetching settings:', err);
            }
        }

        async function saveSetting(key, value, msgId) {
            try {
                const res = await fetch(`/api/settings/${key}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ value })
                });
                if (!res.ok) throw new Error('Failed to save');
                document.getElementById(msgId).textContent = 'Saved!';
                setTimeout(() => { document.getElementById(msgId).textContent = ''; }, 1500);
            } catch (err) {
                document.getElementById(msgId).textContent = 'Error saving!';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchSettings();
            document.getElementById('saveAccount').onclick = async () => {
                await saveSetting('fullName', document.getElementById('fullName').value, 'accountMsg');
                await saveSetting('email', document.getElementById('email').value, 'accountMsg');
            };
            document.getElementById('saveBusiness').onclick = async () => {
                await saveSetting('businessName', document.getElementById('businessName').value, 'businessMsg');
                await saveSetting('gstNumber', document.getElementById('gstNumber').value, 'businessMsg');
                await saveSetting('gstRate', document.getElementById('gstRate').value, 'businessMsg');
                await saveSetting('currency', document.getElementById('currency').value, 'businessMsg');
            };
            document.getElementById('saveNotifications').onclick = async () => {
                await saveSetting('notifLowStock', document.getElementById('notifLowStock').checked, 'notifMsg');
                await saveSetting('notifNewSales', document.getElementById('notifNewSales').checked, 'notifMsg');
                await saveSetting('notifBatchExpiry', document.getElementById('notifBatchExpiry').checked, 'notifMsg');
            };
        });
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
            document.getElementById('overlay').classList.toggle('hidden');
        }

        function toggleTheme() {
            const toggle = document.getElementById('themeToggle');
            const body = document.body;
            
            if (body.classList.contains('dark-mode')) {
                body.classList.remove('dark-mode');
                toggle.classList.remove('active');
                localStorage.setItem('theme', 'light');
            } else {
                body.classList.add('dark-mode');
                toggle.classList.add('active');
                localStorage.setItem('theme', 'dark');
            }
        }

        function handleLogout() {
            if (confirm('Are you sure you want to logout?')) {
                localStorage.clear();
                window.location.href = '/login';
            }
        }

        // Load theme on page load
        window.onload = function() {
            if (localStorage.getItem('isLoggedIn') !== 'true') {
                window.location.href = '/login';
            }
            const theme = localStorage.getItem('theme');
            if (theme === 'dark') {
                document.body.classList.add('dark-mode');
                document.getElementById('themeToggle').classList.add('active');
            }
        };
    </script>
</body>
</html>
