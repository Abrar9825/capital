    <script>
        const allProducts = [
            { id: 1, name: "Denim Co-Ord", price: 899, stock: 25, emoji: "üëó", category: "Co-Ord Set" },
            { id: 2, name: "Cotton Pak Suit", price: 1299, stock: 15, emoji: "üëò", category: "Pak Suit" },
            { id: 3, name: "ABC Cotton Suit", price: 1099, stock: 18, emoji: "ü•ª", category: "Cotton Suit" },
            { id: 4, name: "Linen Dress", price: 799, stock: 30, emoji: "üëö", category: "Designer Wear" },
            { id: 5, name: "Riyon Co-Ord", price: 999, stock: 20, emoji: "üéΩ", category: "Co-Ord Set" },
            { id: 6, name: "Silk Saree", price: 1899, stock: 12, emoji: "ü•ã", category: "Designer Wear" }
        ];
        
        let currentCategory = 'All';

        let billItems = {};

        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
            document.getElementById('overlay').classList.toggle('hidden');
        }

        function selectCategory(category) {
            currentCategory = category;
            // Update button styles
            document.querySelectorAll('.cat-btn').forEach(btn => {
                btn.classList.remove('cat-active', 'bg-gradient-to-r', 'from-blue-600', 'to-indigo-600', 'text-white');
                btn.classList.add('hover:bg-white/50');
            });
            const activeBtn = document.getElementById('cat-' + category);
            activeBtn.classList.add('cat-active', 'bg-gradient-to-r', 'from-blue-600', 'to-indigo-600', 'text-white');
            activeBtn.classList.remove('hover:bg-white/50');
            
            // Update title
            document.getElementById('categoryTitle').textContent = category === 'All' ? 'All Products' : category;
            
            filterProducts();
        }
        
        function renderProducts(products = allProducts) {
            document.getElementById('productGrid').innerHTML = products.map(p => `
                <button onclick="addProduct(${p.id})" class="product-btn glass hover-lift rounded-lg p-2.5 text-center group">
                    <div class="text-3xl mb-1">${p.emoji}</div>
                    <p class="font-bold text-xs text-gray-900 truncate">${p.name}</p>
                    <p class="text-base font-bold text-green-600">‚Çπ${p.price}</p>
                    <p class="text-[10px] text-gray-500">${p.stock} left</p>
                </button>
            `).join('');
        }

        function filterProducts() {
            const search = document.getElementById('searchBox').value.toLowerCase();
            let filtered = allProducts;
            
            // Filter by category
            if (currentCategory !== 'All') {
                filtered = filtered.filter(p => p.category === currentCategory);
            }
            
            // Filter by search
            if (search) {
                filtered = filtered.filter(p => p.name.toLowerCase().includes(search));
            }
            
            renderProducts(filtered);
        }

        function addProduct(id) {
            const product = allProducts.find(p => p.id === id);
            if (!product) return;

            billItems[id] = billItems[id] ? { ...billItems[id], qty: billItems[id].qty + 1 } : { ...product, qty: 1 };
            updateBill();
        }

        function updateQty(id, change) {
            if (!billItems[id]) return;
            billItems[id].qty += change;
            if (billItems[id].qty <= 0) delete billItems[id];
            updateBill();
        }

        function removeItem(id) {
            delete billItems[id];
            updateBill();
        }

        function updateBill() {
            const items = Object.values(billItems);
            const container = document.getElementById('billItems');
            
            if (items.length === 0) {
                container.innerHTML = '<div class="text-center py-8 text-gray-400"><div class="text-3xl mb-1">üõí</div><p class="text-xs">No items added</p></div>';
            } else {
                container.innerHTML = items.map(item => `
                    <div class="flex items-center justify-between p-2 bg-white/40 hover:bg-white/60 rounded-lg transition">
                        <div class="flex-1 min-w-0">
                            <p class="font-bold text-xs text-gray-900 truncate">${item.emoji} ${item.name}</p>
                            <p class="text-[10px] text-gray-600">‚Çπ${item.price} √ó ${item.qty} = ‚Çπ${item.price * item.qty}</p>
                        </div>
                        <div class="flex items-center space-x-1.5 ml-2">
                            <button onclick="updateQty(${item.id}, -1)" class="w-6 h-6 bg-red-100 hover:bg-red-200 text-red-600 rounded font-bold text-xs flex items-center justify-center">‚àí</button>
                            <span class="w-5 text-center font-bold text-xs">${item.qty}</span>
                            <button onclick="updateQty(${item.id}, 1)" class="w-6 h-6 bg-green-100 hover:bg-green-200 text-green-600 rounded font-bold text-xs flex items-center justify-center">+</button>
                        </div>
                    </div>
                `).join('');
            }

            const subtotal = items.reduce((sum, item) => sum + (item.price * item.qty), 0);
            const tax = subtotal * 0.18;
            const total = subtotal + tax;

            document.getElementById('itemCount').textContent = items.reduce((sum, item) => sum + item.qty, 0);
            document.getElementById('subtotalAmount').textContent = subtotal.toFixed(0);
            document.getElementById('taxAmount').textContent = tax.toFixed(0);
            document.getElementById('totalAmount').textContent = total.toFixed(0);
        }

        function generateBill() {
            if (Object.keys(billItems).length === 0) {
                alert('‚ö†Ô∏è Please add products first!');
                return;
            }

            const btn = document.getElementById('printBtn');
            const total = document.getElementById('totalAmount').textContent;
            const itemCount = document.getElementById('itemCount').textContent;
            
            btn.innerHTML = '<span class="text-2xl">‚úÖ</span> <span class="ml-2">Printing...</span>';
            btn.disabled = true;

            setTimeout(() => {
                alert(`‚úÖ Bill Printed Successfully!\n\nüì¶ Total Items: ${itemCount}\nüí∞ Amount: ‚Çπ${total}\n\nThank you!`);
                billItems = {};
                updateBill();
                btn.innerHTML = '<svg class="h-4 w-4 inline mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/></svg>Print Bill';
                btn.disabled = false;
            }, 1200);
        }

        function clearBill() {
            if (Object.keys(billItems).length === 0) return;
            if (confirm('üóëÔ∏è Clear entire bill?')) {
                billItems = {};
                updateBill();
            }
        }

        function handleLogout() {
            if (confirm('Are you sure you want to logout?')) {
                localStorage.clear();
                window.location.href = 'login.html';
            }
        }

        window.onload = function() {
            if (localStorage.getItem('isLoggedIn') !== 'true') window.location.href = 'login.html';
            // Load saved theme
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                document.body.classList.add('dark-mode');
            }
            renderProducts();
        };
    </script>
