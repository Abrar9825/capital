<!-- Global Header Component -->
<header class="flex h-16 items-center justify-between px-4 sm:px-6 glass border-b border-white/20 dark:border-slate-700">
    <div class="flex items-center space-x-4">
        <button onclick="toggleSidebar()" class="lg:hidden p-2 hover:bg-white/10 dark:hover:bg-slate-700/50 rounded-lg transition">
            <svg class="h-5 w-5 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
        <h1 class="text-lg font-bold text-gray-900 dark:text-white whitespace-nowrap"><%= pageTitle %></h1>
    </div>
    <div class="flex items-center space-x-3">
        <!-- Dark Mode Toggle Button -->
        <button onclick="toggleTheme()" id="theme-toggle-btn" class="p-2 hover:bg-white/50 dark:hover:bg-slate-700/50 rounded-lg transition flex items-center justify-center flex-shrink-0">
            <span id="theme-icon" class="text-lg">ðŸŒ™</span>
        </button>
        
        <!-- Stock Alerts Bell -->
        <button onclick="showStockNotifications()" class="p-2 hover:bg-white/50 dark:hover:bg-slate-700/50 rounded-lg transition relative flex-shrink-0">
            <svg class="h-5 w-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
            <span id="header-stock-badge" class="absolute top-1 right-1 h-2 w-2 bg-red-500 rounded-full hidden"></span>
        </button>
    </div>
</header>

<style>
    header h1 {
        color: #111827 !important;
    }
    
    body.dark-mode header h1 {
        color: #f1f5f9 !important;
    }
</style>
